<%include ../partials/header%>

<li class="breadcrumb-item"><a href="/">Home</a></li>
<li class="breadcrumb-item active" aria-current="page">Campsites</li>
</ol>
</nav>

<header class="jumbotron">
    <div class="container">
        <h1>Welcome to the Campgrounds Page</h1>
        <p>View our hand-picked CampSites from all over the World</p>
        <p><a class="btn btn-primary btn-large" href="/campgrounds/new">Click Here to Add New CampSite</a></p>
    </div>
</header>

<div class="row text-left" style = "display:flex; flex-wrap: wrap;">
    <% campgrounds.forEach((campground)=>{ %>
    <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
            <img src="<%=campground.image%>">
            <div class = "caption">
                <h4><%= campground.name %></h4>
                <p><a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a></p>
            </div>
        </div>
    </div>
    <% }); %>
</div>


<p>This is being transmitted from the Camgrounds ejs file</p>

<%include ../partials/footer%>